<div class="row justify-content-center py-4">
    <div class="col-12 col-sm-8">
        <% var formjson=(data.compare && data.compare.formjson)?data.compare.formjson:{firstUrl:"",secondUrl:""};%>
        <% if(data.compare && data.compare.msg!=""){ %>
        <div>
            <p class="alert-info p-3 rounded"><%= data.compare.msg %></p>
        </div>
        <% } %>
        <form action="/compare" method="POST">
            <div class="form-group">
                <label class="form-label d-block" for="firstUrl">Enter Url</label>
                <div class="input-group">
                    <input class="form-control" type="text" id="firstUrl" name="firstUrl" required value="<%= formjson.firstUrl %>">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="ion-gear-a"></i></span>
                    </div>
                </div>
            </div>
            <div class="form-group row align-items-end">
                <div class="col">
                    <label class="form-label d-block" for="secondUrl">Enter Compare Url</label>
                    <div class="input-group">
                        <input class="form-control" type="text" id="secondUrl" name="secondUrl" required value="<%= formjson.secondUrl %>">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="ion-gear-a"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>